{
  "compilerOptions": {
    // TODO: ESMで絶対pathの解決ができないため修正する
    // "baseUrl": "./",
    // "paths": {
    //   "@/*": ["*"]
    // },
    "jsx": "react",
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true
  }
}
